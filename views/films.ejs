<!DOCTYPE html>
<html>

<head>
  <title>Liste des films : <%= find %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <main>
    <h1>Liste des films : <%= find %></h1>

    <a href="/">Retour à l'accueil</a>
    <a href="/films/<%= find %>">Retour à la liste des films</a>

   

    <% films.forEach(film => { %>
      <div>
        <a href="/film/<%= film.imdbID %>">
          <img src="<%= film.Poster %>" alt="<%= film.Title %>">
          <h3><%= film.Title %></h3>
        </a>
      </div>
    <% }); %>

    <% if (beforePage >= 1) { %>
      <a href="/films/<%= find %>/<%= beforePage %>">Précédent</a>
    <% } %>

    <a href="/films/<%= find %>/<%= nextPage %>">Suivant</a>
  </main>

</body>

</html>